<%- include('../headers/echo') %>

<section class="max-w-xl mx-auto mt-16 bg-white p-8 rounded-2xl shadow-md border border-rose-100">
  <h2 class="text-3xl font-serif text-rose-800 font-bold mb-6 text-center">
    📝 Update Your Echo
  </h2>

  <form 
    action="/echo/<%= echo.slug %>/update" 
    method="POST" 
    enctype="multipart/form-data" 
    class="space-y-6"
  >

    <!-- Title -->
    <div>
      <label for="title" class="block text-sm font-medium text-slate-700 mb-1">Echo Title</label>
      <input 
        type="text" 
        id="title"
        name="title" 
        value="<%= echo.title %>" 
        required 
        class="w-full px-4 py-2 border border-slate-300 rounded-lg shadow-sm text-sm focus:outline-none focus:ring-2 focus:ring-rose-200"
      />
    </div>

    <!-- Description -->
    <div>
      <label for="description" class="block text-sm font-medium text-slate-700 mb-1">Echo Description</label>
      <textarea 
        id="description"
        name="description" 
        rows="4" 
        placeholder="Write something heartfelt..." 
        class="w-full px-4 py-2 border border-slate-300 rounded-lg shadow-sm text-sm focus:outline-none focus:ring-2 focus:ring-rose-200"
      ><%= echo.description %></textarea>
    </div>

    <!-- Image Preview + Change -->
    <div>
      <p class="text-sm text-slate-600 mb-2">Current Image:</p>
      <img 
        src="<%=echo.imageUrl %>" 
        alt="Current Echo Image" 
        class="w-full max-w-xs h-auto rounded-lg shadow-sm mb-3"
      />
      <label for="image" class="block text-sm font-medium text-slate-700 mb-1">Change Image (optional)</label>
      <input 
        type="file" 
        id="image"
        name="image" 
        accept="image/*" 
        class="w-full text-sm border border-slate-300 px-3 py-2 rounded-lg"
      />
    </div>

    <!-- Submit -->
    <div class="text-center pt-4">
      <button 
        type="submit" 
        class="bg-rose-500 hover:bg-rose-600 text-white px-6 py-2 rounded-full font-medium tracking-wide shadow-sm transition"
      >
        💾 Save Echo
      </button>
    </div>
  </form>
</section>

<%- include('../footers/footer') %>
